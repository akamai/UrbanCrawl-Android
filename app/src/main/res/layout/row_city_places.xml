<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/row_city_place_thumb"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:src="@drawable/overlay_places" />

    <TextView
        android:id="@+id/row_city_place_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="Akamai Technologies HQ" />

    <TextView
        android:id="@+id/row_city_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_city_place_name"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-6dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_light"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="Tokyo Tokyo Tokyo Tokyo" />

</RelativeLayout>